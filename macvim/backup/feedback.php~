	 $APP = mysql_real_escape_string($_GET['app']);
	 $ID = mysql_real_escape_string($_GET['DeviceID']);
	 $CNT = mysql_real_escape_string($_GET['Count']);
	 $feedback = mysql_real_escape_string($_GET['feedback']);

	 $sql = "insert into feedback (deviceid,count,appName,feedback) values ('$ID','$CNT','$APP','$feedback');";

