export PS1="\\[\\e[32m\\]\\u\\[\\e[0m\\]\\[\\e[32m\\]@\\h\\[\\e[36m\\]\\w \\[\\e[33m\\]\$(parse_git_branch)\\[\\e[0m\\]\\[\\e[33m\\]\$ \\[\\e[37m\\]"
